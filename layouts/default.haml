---
extension: html
filter:
  - erb
  - haml
---
!!!
- global_feed = "http://feeds.feedburner.com/wurbedotro"
- global_comments_feed = "http://feeds.feedburner.com/wurbedotro_comments"
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8' }
    %title== wurbe#{" - #{@page.title}" if @page.title && !@page.title.empty?}

    %link{ :title => 'wurbe feed', :href => global_feed, :type => 'application/atom+xml', :rel => 'alternate' }
    / %link{ :title => 'wurbe feed feed', :href => global_comments_feed, :type => 'application/atom+xml', :rel => 'alternate' }

    %link{ :href => '/stylesheets/base.css', :media => 'screen', :type => 'text/css', :rel => 'stylesheet' }
    /[if IE]
      %link{ :href => '/stylesheets/base_ie.css', :media => 'screen', :type => 'text/css', :rel => 'stylesheet' }

    %script{ :src => '/javascripts/app.js', :type => 'text/javascript' }

  %body.fixed.blue
    %script{ :type => "text/javascript" }
      loadPreferences()
    #wrapper
      #header.clearfix
        #title.clearfix
          %h1= link_to "wurbe", "/"
        %h2
          Sections
        %ul#menu
          %li{ :class => (@page.url == "/" ? "selected" : "")}
            = link_to "home", "/"
          - %w(despre blog intalniri).each do |menu_item|
            %li{ :class => (File.basename(@page.filename) == menu_item ? "selected" : "")}
              = link_to menu_item, "/#{menu_item}"
      #contentwrapper.clearfix
        #content
          #innerwrapper
            = @content
        #sidebar
          .boxy.short
            %h3 Despre
            %p== wurbe (web urbe) este grupul dezvoltatorilor web din bucuresti. Citeste mai multe detalii #{link_to "despre noi", "/despre"}.
            %p#subscribe
              %a.feed{ :href => global_feed } articles feed
              / %br
              / %a.feed{ :href => global_comments_feed } comments feed
          / {{ 'blog' | section | months | assign_to: 'blog_section' }}
          / {{ blog_section | latest_articles | assign_to: 'recents' }}
          
          / {{ 'intalniri' | section | months | assign_to: 'meets_section' }}
          / {{ meets_section | latest_articles | assign_to: 'meets_recents' }}
          .boxy.tall.minor
            %h3 Intalniri
            - meets = @pages.find(:all, :in_directory => "/", :recursive => true, :sort_by => "created_at", :reverse => true, :blog_post => true) { |p| p.title =~ /^wurbe #\d+$/ }
            - meets.delete(@page)
            / - meets.group_by{|p| p.created_at.strftime('%B')}.each do |month, posts|
            %ul
              - meets.each do |post|
                %li
                  = link_to_page(post)
                  %em== (#{post.created_at.strftime('%Y-%m-%d')})

          .boxy.tall.minor
            %h3 Arhiva
            - all_posts = @pages.find(:all, :in_directory => "/", :recursive => true, :sort_by => "created_at", :reverse => true, :blog_post => true)
            - all_posts.delete(@page)

            - if all_posts.empty?
              %p No posts
            - else
              %ul
                - all_posts.group_by{|p| p.created_at.strftime('%Y')}.each do |year, year_posts|
                  - year_posts.group_by{|p| p.created_at.strftime('%B')}.each do |month, posts|
                    %li
                      = link_to "#{month} #{year}", "/#{year}/#{posts.first.created_at.strftime('%m')}"
                      %em== (#{posts.length})

          .boxy.short
            %h3 Organizatori
            %ul
              %li= link_to "Cristi Balan", "http://evil.che.lu/" 
              %li= link_to "Viorel Cojocaru", "http://beanon.com/" 
              %li= link_to "Andrei Bocan", "http://spinach.andascarygoat.com/" 
              %li= link_to "Andrei Maxim", "http://artfulco.de/" 
              %li= link_to "Aurelian Oancea", "http://locknet.ro/" 

      #options
        %h2
          Optiuni:
        %h3
          Size
        %ul#option_size
          %li#option_size_fixed.fixed
            %a
              %span
                fixed
          %li#option_size_fluid.fluid
            %a
              %span
                fluid
        %h3
          Colors
        %ul#option_color
          %li#option_color_orange.orange
            %a
              %span
                orange
          %li#option_color_blue.blue
            %a
              %span
                blue
          %li#option_color_green.green
            %a
              %span
                green
          %li#option_color_pink.pink
            %a
              %span
                pink
          %li#option_color_cyan.cyan
            %a
              %span
                cyan
          %li#option_color_red.red
            %a
              %span
                red
          %li#option_color_violet.violet
            %a
              %span
                violet
      #footer
        %p
          Copyright &copy; 2007, wurbe.
          == Valid #{link_to("XHTML", "http://evil.che.lu/projects/skittlish")} and #{link_to("CSS", "http://jigsaw.w3.org/css-validator/check/referer")}.
        %p== Using #{link_to("skittlish", "http://evil.che.lu/projects/skittlish")} on #{link_to("webby", "http://webby.rubyforge.org/")}.
